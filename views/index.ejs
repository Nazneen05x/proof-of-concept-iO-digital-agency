    <main>
        <!-- INTRODUCTION-->
        <div class="grid-container">
            <div class="backgroundcolor-darkpurple">
                <img class="boterhamfoto" src="/mae-mu-IZ0LRt1khgM-unsplash.jpg" alt="">
                <section class="section-introduction">
                    <h1><%- data.name %></h1>
                    <h2><%- data.personalia.role %></h2>
                    <h3 class="Introductionkopje">Introduction</h3>
                    <img class="iologoblackIntroduction" src="/download.png" alt="logoblack">
                    <p class="introduction-p"><%- data.introduction %></p>
                </section>

                <section class="buttonlinks">
                    <button class="beuabutton">More about Beau</button>
                    <button class="personalbutton">EXAMPLE REGION - NL</button>
                    <button class="personalbutton">37 Years old</button>

                    <button>
                        <span><img class="githubicon" src="/github.png" alt=""></span>
                        <span class="BeauTerHam">BeauTerHam</span>
                    </button>

                    <button>
                        <span><img class="githubicon" src="/twitter.png" alt=""></span>
                        <span class="BeauTerHam">WithButter</span>
                    </button>

                    <button>
                        <span><img class="githubicon" src="/linkedin.png" alt=""></span>
                        <span class="BeauTerHam">Beau ter Ham</span>
                    </button>
                    <img class="iologowhite" src="/download.png" alt="whitelogoio">
                </section>
            </div>
        </div>


        <!-- SKILLS -->
        <div class="backgroundcolor-babypink">
            <section>
                <h3 class="skillskopje">Skills</h3>
            </section>

            <section>
                <img class="iologoblackskills" src="/iO-logo-black-002.png" alt="logoblack">
            </section>

            <section>
                <button class="clrdarkpurple">Angular</button>
                <button class="clrdarkpurple">TypeScript</button>
                <button class="clrdarkpurple">JavaScript</button>
                <button class="clrdarkpurple">Scrum</button>
                <button class="clrdarkpurple">Cypress</button>
                <button class="clrdarkpurple">GraphQL</button>
                <button class="clrdarkpurple">Agile</button>
                <button class="clrdarkpurple">Jest</button>
                <button class="clrdarkpurple">CSS</button>
                <button class="clrdarkpurple">JQuery</button>
                <button class="clrdarkpurple">AngularJS</button>
                <button class="clrdarkpurple">Ember</button>
                <button class="clrdarkpurple">Laravel</button>
                <button class="clrdarkpurple">SVN</button>
                <button class="clrdarkpurple">SAFe</button>
            </section>
            <h1><span class="h1ninja">ðŸ¥·</span></h1>
            <img class="refreshicon" src="/rotate-ccw.svg" alt="rotateicon"><span class="Refreshtitle">Refresh
                page</span>
        </div>


        <!-- INTRODUCTION (MOTIVATION) -->
        <div class="backgroundcolormotivation">

            <section>
                <h3 class="motivationkopje">Motivation</h3>
            </section>

            <section>
                <img class="iologoblackmotivation" src="/iO-logo-black-002.png" alt="logoblack">
            </section>

            <section>
                <p class="motivationp"><%- data.motivation %></p>
                <img class="ninjagif" src="/ninja laptop.gif" alt="">
            </section>
        </div>

        <!-- PROJECTS -->
        <section>
            <h3 class="projectkopje">Projects via iO</h3>
        </section>

        <section>
            <img class="iologoblackproject" src="/iO-logo-black-002.png" alt="logoblack">
        </section>

        <div class="projectswork">
            <div class="backgroundcolorproject hidden">
                <section>

                    <% data.projects.forEach(projects=> { %>

                        <p class="nummerp">2019</p>

                        <p class="datump">
                            September - present
                        </p>

                        <p class="projectname">
                            <%= projects.role %>
                        </p>

                        <p class="companyp">
                            <%= projects.company %>
                        </p>

                        <p class="descriptionp">
                            <%= projects.description %>
                        </p>
                        <div class="buttonproject">
                            <button class="projectbutton">Angular</button>

                            <button class="projectbutton">CSS</button>

                            <button class="projectbutton">JavaScript</button>
                        </div>
                        <% }); %>
                </section>
            </div>
            <!-- PROJECTS END -->


            <!-- WORK EXPERIENCE -->
            <section>
                <h3 class="workkopje">Work experience</h3>
            </section>

            <section>
                <img class="iologoblackwork" src="/iO-logo-black-002.png" alt="logoblack">
            </section>

            <section class="experiencetekst hidden">
                <% data.experience.forEach(experience=> { %>
                    <p class="rolep">
                        <%= experience.role %>
                    </p>

                    <p class="companypp">
                        <%= experience.company %>
                    </p>

                    <p class="experiencep">
                        <%= experience.description %>
                    </p>

                    <!-- CODE VAN ROELIE Github:@r202220-->
                    <% experience.stackAndTechniques.forEach(technique=> { %>
                        <button class="projectbutton">
                            <%= technique.name %>
                        </button>

                        <% }) %>
                            <% }); %>
            </section>
        </div>

        <div class="sidecontent">

            <!-- EDUCATION -->
            <section class="cardcolor">

                <section>
                    <h3 class="Educationtkopje">Education</h3>
                </section>

                <section>
                    <img class="iologoblackEducation" src="/iO-logo-black-002.png" alt="logoblack">
                </section>

                <section class="educationsection">
                    <% data.education.forEach(education=> { %>

                        <p class="educationname">
                            <%= education.name %>
                        </p>

                        <p class="educationinstitute">
                            <%= education.institute %>
                        </p>
                        <% }); %>
                </section>
            </section>
            <!-- EDUCATION END -->


            <!-- LANGUAGES -->
            <section class="cardcolorlang">
                <section>
                    <h3 class="Educationtkopje">Languages</h3>
                </section>

                <section>
                    <img class="iologoblackEducation" src="/iO-logo-black-002.png" alt="logoblack">
                </section>

                <!-- CODE AANGEPAST (CODE KOMT OORSPRONKELIJK VAN ROELIE Github:@r202220) -->
                <% data.languages.forEach(lang=> { %>
                    <section>
                        <% if (lang.language && lang.proficiency) { %>
                            <section>
                                <p class="languagenameandproficiency"><%- lang.language.name %></p>
                                <p class="languagenameandproficiency"><%- lang.proficiency.name %></p>
                            </section>
                            <% } %>

                    </section>
                    <% }) %>
            </section>

            <!-- PUBLICATIONS -->

            <section class="cardcolorpublic">
                <section>
                    <h3 class="Educationtkopje">Publications</h3>
                </section>

                <section>
                    <img class="iologoblackEducation" src="/iO-logo-black-002.png" alt="logoblack">
                </section>

                <section>
                    <% data.publications.forEach(publications=> { %>

                        <p class="publicationstitle">
                            <%= publications.title %>
                        </p>

                        <p class="publicationsdescription">
                            <%= publications.description %>
                        </p>

                        <p class="publicationslink">
                            <%= publications.link %>
                        </p>

                        <% }); %>
                </section>
            </section>

            <!-- SIDEPROJECTS -->
            <section class="cardcolorlang">

                <section>
                    <h3 class="Educationtkopje">Sideprojects</h3>
                </section>

                <section>
                    <img class="iologoblackEducation" src="/iO-logo-black-002.png" alt="logoblack">
                </section>

                <section>
                    <% data.sideProjects.forEach(sideProjects=> { %>

                        <p class="publicationstitle">
                            <%= sideProjects.title %>
                        </p>

                        <p class="publicationsdescription">
                            <%= sideProjects.description %>
                        </p>

                        <p class="publicationslink">
                            <%= sideProjects.link %>
                        </p>

                        <% }); %>
                </section>
            </section>
        </div>
    </main>
    <%- include('./Partials/foot') %>